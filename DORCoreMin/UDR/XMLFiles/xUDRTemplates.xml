<root>
<!-- Buttons -->
	<template name="tButIconAddUDRF">
		<buttoncontrol>
			<anchored width="20" height="20" />
			<icon normal="button_add" pressed="button_add_down" />
			<tooltip textres="button_add" />
			<script>
				function onButtonPress()
					window[target[1]].fpAddEntry(true);
				end
			</script>
		</buttoncontrol>
	</template>

<!-- Generic Controls -->
	<template name="tWindowFrameContentUDRF">
		<tWindowFrame>
			<anchored>
				<left offset="30" />
				<right offset="-30" />
				<bottom offset="-30" />
			</anchored>
			<frame offset="20,17,20,17" />
		</tWindowFrame>
	</template>

</root>
